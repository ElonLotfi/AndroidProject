<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.plfgb.app.DrawingCanvas
        android:id="@+id/drawingCanvas5"
        android:layout_width="0dp"
        android:layout_height="164dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/buttonstyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textOfTriangle" />

    <Button
        android:id="@+id/buttonTriangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"

        android:layout_marginEnd="44dp"
        android:layout_marginBottom="131dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/quitTraining" />

    <TextView
        android:id="@+id/textOfTriangle"
        android:layout_width="313dp"
        android:layout_height="48dp"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="35dp"
        android:text="draw a Triangle"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textScoreTriangle"
        android:layout_width="208dp"
        android:layout_height="51dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="30dp"
        android:text="Your score : "
        app:layout_constraintBottom_toTopOf="@+id/textOfTriangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/quitTraining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="53dp"
        android:text="Quit training"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonTriangle"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />
</android.support.constraint.ConstraintLayout>